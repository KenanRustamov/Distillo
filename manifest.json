{
  "manifest_version": 3,
  "name": "Distillo YouTube to Anki",
  "version": "0.1.0",
  "description": "Downloads YouTube video transcripts and converts them to Anki decks.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.youtube.com/oembed*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16-grey.png",
      "48": "icons/icon48-grey.png",
      "128": "icons/icon128-grey.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 